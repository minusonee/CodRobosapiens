public class RobotCuRotiSiGlisiera {

    private int putereMotorStangaFata;
    private int putereMotorStangaSpate;
    private int putereMotorDreaptaFata;
    private int putereMotorDreaptaSpate;
    private int x;
    private int y;
    private boolean glisieraExtinsa;

    public RobotCuRotiSiGlisiera() {
        putereMotorStangaFata = 0;
        putereMotorStangaSpate = 0;
        putereMotorDreaptaFata = 0;
        putereMotorDreaptaSpate = 0;
        glisieraExtinsa = false;
    }

    public void setPutereMotorStangaFata(int putere1) {
        putereMotorStangaFata = putere1;
    }

    public void setPutereMotorStangaSpate(int putere2) {
        putereMotorStangaSpate = putere2;
    }

    public void setPutereMotorDreaptaFata(int putere3) {
        putereMotorDreaptaFata = putere3;
    }

    public void setPutereMotorDreaptaSpate(int putere4) {
        putereMotorDreaptaSpate = putere4;
    }

    public void actioneazaGlisiera(boolean extinde) {
        glisieraExtinsa = extinde;
    }

    public static void main(String[] args) {
        RobotCuRotiSiGlisiera robot = new RobotCuRotiSiGlisiera();
        robot.setPutereMotorStangaFata(x);
        robot.setPutereMotorDreaptaFata(y);
        robot.actioneazaGlisiera(true);
    }
}
